
<div class="display">
  <h1>{{model.answerer}}'s Answer:</h1>
  <h3>{{model.answer}}</h3>

  {{#if isEditing}}

  <form class="form">
    <div class="form-group">
      <label for="answerer">Enter your Name: </label>
      {{input value=model.answerer id="answerer" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="answer">Description:</label>
      {{textarea value=model.answer id="answer" class="form-control" rows="5"}}
    </div>


    <button class="btn btn-success" {{action 'save'}}>Update {{model.answerer}}'s Answer</button>


  </form>

  {{else}}

  <button class="btn btn-primary" {{action 'edit'}}>Edit {{model.answerer}}'s Answer</button>
  <button class="btn btn-danger" {{action 'deleteAnswer'}}>Delete {{model.answerer}}'s Answer</button>
  <button class="btn btn-primary" {{action 'back'}}>Back to Question</button>

  {{/if}}

  {{outlet}}
</div>
